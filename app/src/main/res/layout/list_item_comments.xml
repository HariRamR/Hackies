<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/twentySize"
    android:paddingBottom="@dimen/twentySize">

    <TextView
        android:id="@+id/author_name_header_list_comments"
        android:layout_width="@dimen/fortySize"
        android:layout_height="@dimen/fortySize"
        android:background="@drawable/circular_bg"
        android:fontFamily="@font/heebo_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLength="1"
        android:textColor="@color/white"
        android:textSize="@dimen/eighteenSizeSP"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/tenSize"
        android:paddingEnd="@dimen/zeroSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/author_name_list_comments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_medium"
                android:gravity="top"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="@dimen/sixteenSizeSP"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/date_list_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryTxtClr"
                android:textSize="@dimen/fourteenSizeSP"
                android:includeFontPadding="false"/>

        </LinearLayout>

        <TextView
            android:id="@+id/comment_list_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTxtClr"
            android:textSize="@dimen/sixteenSizeSP"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/tenSize"/>

        <TextView
            android:id="@+id/reply_count_list_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sixteenSizeSP"
            android:textColor="@color/secondaryTxtClr"
            android:includeFontPadding="false"
            app:drawableStartCompat="@drawable/reply_icon"
            android:drawablePadding="@dimen/fiveSize"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="@dimen/tenSize" />

    </LinearLayout>

</LinearLayout>